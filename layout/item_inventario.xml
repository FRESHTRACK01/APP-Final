<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/noti1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ³digo:"
            android:textColor="#4e9750"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#111418"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_name_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del producto:"
            android:textColor="#4e9750"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#637588"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_name_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad:"
            android:textColor="#4e9750"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#111418"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_name_label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textColor="#4e9750"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#111418"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_name_label5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de entrada:"
            android:textColor="#4e9750"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#111418"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_name_label6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de salida:"
            android:textColor="#4e9750"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#111418"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_name_label7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textColor="#4e9750"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#111418"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/modi"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="@android:color/transparent"
                android:text="Modificar"
                android:textColor="#1980E6"
                android:textSize="14sp" />

            <Button
                android:id="@+id/eli"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:text="Eliminar"
                android:textColor="#FF0000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>